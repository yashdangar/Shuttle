generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id              Int            @id @default(autoincrement())
  email           String?        @unique
  firstName       String?
  lastName        String?
  phoneNumber     String?
  arrivalDate     DateTime?
  confirmationNum String?        @unique
  reservationId   String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  hotelId         Int?
  isNonResident   Boolean        @default(false)
  googleId        String?
  hotel           Hotel?         @relation(fields: [hotelId], references: [id], onDelete: Cascade)
  notifications   Notification[]
  trips           Trip[]
}

model Location {
  id           Int      @id @default(autoincrement())
  name         String
  latitude     Float
  longitude    Float
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tripsDropoff Trip[]   @relation("dropoff")
  tripsPickup  Trip[]   @relation("pickup")
}

model Trip {
  id                Int           @id @default(autoincrement())
  guestId           Int
  numberOfPersons   Int
  numberOfBags      Int
  pickupLocationId  Int?
  dropoffLocationId Int?
  preferredTime     DateTime?
  paymentMethod     PaymentMethod
  tripType          TripType
  isCompleted       Boolean       @default(false)
  isPaid            Boolean       @default(false)
  isCancelled       Boolean       @default(false)
  isRefunded        Boolean       @default(false)
  shuttleId         Int?
  encryptionKey     String?
  qrCodePath        String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  dropoffLocation   Location?     @relation("dropoff", fields: [dropoffLocationId], references: [id])
  guest             Guest         @relation(fields: [guestId], references: [id])
  pickupLocation    Location?     @relation("pickup", fields: [pickupLocationId], references: [id])
  shuttle           Shuttle?      @relation(fields: [shuttleId], references: [id])
}

model FrontDesk {
  id            Int            @id @default(autoincrement())
  name          String
  phoneNumber   String
  email         String         @unique
  password      String
  hotelId       Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  hotel         Hotel          @relation(fields: [hotelId], references: [id], onDelete: Cascade)
  notifications Notification[]
}

model Admin {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  password      String
  hotelId       Int?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  hotel         Hotel?         @relation(fields: [hotelId], references: [id])
  notifications Notification[]
}

model Driver {
  id            Int            @id @default(autoincrement())
  name          String
  phoneNumber   String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  shuttleId     Int?
  hotelId       Int
  endTime       DateTime?
  startTime     DateTime?
  hotel         Hotel          @relation(fields: [hotelId], references: [id], onDelete: Cascade)
  shuttle       Shuttle?       @relation(fields: [shuttleId], references: [id])
  notifications Notification[]
}

model Notification {
  id          Int        @id @default(autoincrement())
  title       String
  message     String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  driverId    Int?
  guestId     Int?
  frontDeskId Int?
  adminId     Int?
  isRead      Boolean    @default(false)
  admin       Admin?     @relation(fields: [adminId], references: [id])
  driver      Driver?    @relation(fields: [driverId], references: [id])
  frontDesk   FrontDesk? @relation(fields: [frontDeskId], references: [id])
  guest       Guest?     @relation(fields: [guestId], references: [id])
}

model Hotel {
  id         Int         @id @default(autoincrement())
  name       String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  latitude   Float?
  longitude  Float?
  admins     Admin[]
  drivers    Driver[]
  frontDesks FrontDesk[]
  guests     Guest[]
  shuttles   Shuttle[]
}

model Shuttle {
  id            Int      @id @default(autoincrement())
  hotelId       Int
  vehicleNumber String
  driverId      Int
  createdAt     DateTime @default(now())
  endTime       DateTime
  startTime     DateTime
  seats         Int
  driver        Driver[]
  hotel         Hotel    @relation(fields: [hotelId], references: [id], onDelete: Cascade)
  trips         Trip[]
}

enum PaymentMethod {
  APP
  FRONTDESK
  DEPOSIT
}

enum TripType {
  HOTEL_TO_AIRPORT
  AIRPORT_TO_HOTEL
}
